{
  "productName": "myTauriViewer",
  "version": "0.0.1",
  "identifier": "com.tauri.viewer",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "vuetify-tauri",
        "width": 800,
        "height": 600,
        "windowEffects": {
          "effects": [
            "acrylic"
          ]
        },
        "decorations": false,
        "minimizable": true,
        "maximizable": true,
        "closable": true
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["*/**"]
      },
      "csp": "default-src 'self' ipc: http://ipc.localhost; style-src 'self' 'unsafe-inline' * ipc: http://ipc.localhost; script-src 'self' 'unsafe-eval'; img-src * 'self' data: asset: http://asset.localhost; connect-src 'self' * ipc: http://ipc.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}