{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "desktop-capability",
    "windows": [
        "main"
    ],
    "platforms": [
        "linux",
        "macOS",
        "windows"
    ],
    "permissions": [
        "path:default",
        "event:default",
        "window:default",
        "app:default",
        "resources:default",
        "menu:default",
        "tray:default",
        "window:allow-set-title",
        "window:allow-minimize",
        "window:allow-is-maximized",
        "window:allow-toggle-maximize",
        "window:allow-close",
        "window:allow-start-dragging",
        "image:default",
        "fs:default",{
            "identifier":"fs:allow-picture-read",
            "allow": [{"path": "$PICTURE/*"}]
        }
    ]
}