{
    "$schema": "../gen/schemas/mobile-schema.json",
    "identifier": "mobile-capability",
    "windows": [
        "main"
    ],
    "platforms": [
        "iOS",
        "android"
    ],
    "permissions": [
        "webview:allow-internal-toggle-devtools",
        "webview:default",
        "fs:default",
        {
            "identifier": "fs:scope",
            "allow": [
                {
                    "path": "$APPDATA"
                },
                {
                    "path": "$APPDATA/**"
                }
            ]
        }
    ]
}